---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Izikie | {title}</title>
	</head>
	<body class="text-white no-underline">
		<nav class="mx-2 mt-2 flex justify-between px-2 py-2 rounded-lg">
			<h3 class="text-2xl font-bold text-gradient">Izikie</h3>
			<ul class="list-none flex gap-5 font-semibold">
				<li><a href="/" class="hover:underline">Home</a></li>
				<li><a href="/projects" class="hover:underline">Projects</a></li>
			</ul>
		</nav>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 232, 67, 147;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		background-size: 224px;
	}
	nav {
		background-color: #24292e;
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>
