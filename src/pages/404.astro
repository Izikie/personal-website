---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 | Page Not Found">
	<main>
		<h1>404 | <span class="text-gradient">Page not found</span></h1>
        <img class="text-gradient" src="error-404.svg">
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1.1;
		text-align: center;
		margin-bottom: 1em;
	}
	img {
		display: block;
		margin: 0 auto;
		max-width: 100%;
		height: auto;
		max-height: 250px;
	}
</style>