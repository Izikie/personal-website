---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home">
	<main>
		<h1><span class="text-gradient">Izikie</span></h1>
	</main>
</Layout>

<style>
	main {
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>
